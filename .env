# Only reply to these reporter domains (comma-separated). Empty = allow all.
ALLOWED_SENDER_DOMAINS=company.com

# Polling + threads
POLL_SECONDS=30
MAX_URL_THREADS=8
MAX_MSG_THREADS=4

# Scoring thresholds
DKIM_FAIL_POINTS=35
SPF_NOTPASS_POINTS=25
VT_MALICIOUS_POINTS=30
SB_HIT_POINTS=30
THRESHOLD_SUSPICIOUS=35
THRESHOLD_MALICIOUS=70

# Smarter URL/intel behavior (no manual allowlist)
VT_MIN_ENGINES=3
GSB_REQUIRE_THREAT_TYPES=MALWARE,SOCIAL_ENGINEERING
REQUIRE_BOTH_INTEL=true
SCORE_ONLY_PRIMARY_LINK=true
AUTH_PENALIZE=false
